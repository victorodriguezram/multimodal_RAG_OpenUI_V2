# =============================================================================
# Environment Variables Template for Multimodal RAG System
# =============================================================================
# Copy this file to .env and fill in your actual values
# Make sure to add .env to your .gitignore file to keep secrets secure

# =============================================================================
# API Keys (REQUIRED)
# =============================================================================
# Get your Cohere API key from: https://dashboard.cohere.com/
COHERE_API_KEY=your_cohere_api_key_here

# Get your Gemini API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Model Configuration
# =============================================================================
# Gemini model to use for response generation
GEMINI_MODEL=gemini-2.5-pro

# =============================================================================
# Application Configuration
# =============================================================================
# Port for Streamlit application
STREAMLIT_SERVER_PORT=8501

# Data directory for storing embeddings and document metadata
DATA_DIR=/app/data

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL database settings
POSTGRES_DB=ragdb
POSTGRES_USER=raguser
POSTGRES_PASSWORD=your_secure_password_here

# Redis configuration
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# Security Settings
# =============================================================================
# Secret key for session management (generate a secure random string)
SECRET_KEY=your_secret_key_here

# JWT secret for API authentication (if implementing API)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Docker Configuration
# =============================================================================
# UID and GID for proper file permissions in containers
USER_ID=1000
GROUP_ID=1000

# =============================================================================
# Production Settings
# =============================================================================
# Set to 'production' for production deployment
ENVIRONMENT=development

# Domain name for SSL certificates
DOMAIN_NAME=your-domain.com

# Email for Let's Encrypt SSL certificates
SSL_EMAIL=your-email@domain.com

# =============================================================================
# Monitoring and Logging
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable/disable metrics collection
ENABLE_METRICS=true

# =============================================================================
# Resource Limits
# =============================================================================
# Maximum upload file size (in MB)
MAX_UPLOAD_SIZE=50

# Maximum number of documents to process simultaneously
MAX_CONCURRENT_DOCS=5

# FAISS index memory limit (in MB)
FAISS_MEMORY_LIMIT=1024
