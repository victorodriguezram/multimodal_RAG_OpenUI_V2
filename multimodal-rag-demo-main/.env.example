# Production Environment Variables
# Copy this file to .env and configure your actual values

# API Keys (Required)
COHERE_API_KEY=your_cohere_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Model Configuration
GEMINI_MODEL=gemini-2.5-flash-preview-04-17

# Database Configuration
POSTGRES_DB=multimodal_rag
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=secure_postgres_password_change_this

# Redis Configuration
REDIS_PASSWORD=multimodal_rag_secure_password_change_this

# API Security
API_SECRET_KEY=your_very_secure_secret_key_here_change_this
RATE_LIMIT_PER_MINUTE=60

# File Upload Limits
MAX_FILE_SIZE_MB=50

# Monitoring
GRAFANA_PASSWORD=admin_secure_password_change_this

# Logging
LOG_LEVEL=INFO

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# N8N Integration
N8N_WEBHOOK_SECRET=n8n_webhook_secret_change_this
N8N_API_KEY=n8n_api_key_change_this
